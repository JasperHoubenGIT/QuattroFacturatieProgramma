<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="QuattroFacturatieProgramma.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:QuattroFacturatieProgramma.Models"
             xmlns:viewmodels="clr-namespace:QuattroFacturatieProgramma.ViewModels"
             xmlns:converters="clr-namespace:QuattroFacturatieProgramma.Converters"
             x:DataType="viewmodels:MainViewModel"
             Title="Quattro Facturatie"
             BackgroundColor="#F8FAFC">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Cleaner Color Palette -->
            <Color x:Key="Primary">#2563EB</Color>
            <Color x:Key="Success">#059669</Color>
            <Color x:Key="Warning">#D97706</Color>
            <Color x:Key="Danger">#DC2626</Color>
            <Color x:Key="Gray900">#111827</Color>
            <Color x:Key="Gray700">#374151</Color>
            <Color x:Key="Gray500">#6B7280</Color>
            <Color x:Key="Gray300">#D1D5DB</Color>
            <Color x:Key="Gray100">#F3F4F6</Color>
            <Color x:Key="Gray50">#F9FAFB</Color>

            <!-- Card Style -->
            <Style x:Key="Card" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stroke" Value="{StaticResource Gray300}"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="8"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Action Card (for steps user must take) -->
            <Style x:Key="ActionCard" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="Stroke" Value="{StaticResource Primary}"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="8"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Primary Button -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="16,12"/>
            </Style>

            <!-- Secondary Button -->
            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Gray100}"/>
                <Setter Property="TextColor" Value="{StaticResource Gray700}"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="16,12"/>
            </Style>

            <!-- Success Button -->
            <Style x:Key="SuccessButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Success}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="20,16"/>
            </Style>

            <!-- Headers -->
            <Style x:Key="StepNumber" TargetType="Label">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="WidthRequest" Value="28"/>
                <Setter Property="HeightRequest" Value="28"/>
            </Style>

            <Style x:Key="StepTitle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
            </Style>

            <Style x:Key="StepDescription" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="{StaticResource Gray700}"/>
                <Setter Property="LineHeight" Value="1.4"/>
            </Style>

            <Style x:Key="InfoText" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="{StaticResource Gray500}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- HEADER -->
            <Border Style="{StaticResource Card}" Padding="20">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Grid.Column="0" 
                           Source="quattro_logo.png"
                           HeightRequest="40"
                           VerticalOptions="Center"/>

                    <StackLayout Grid.Column="1" Spacing="4" Margin="16,0,0,0" VerticalOptions="Center">
                        <Label Text="Quattro Facturatie"
                               Style="{StaticResource StepTitle}"
                               FontSize="24"/>
                        <Label Text="{Binding StatusTekst}"
                               Style="{StaticResource InfoText}"/>
                    </StackLayout>
                </Grid>
            </Border>

            <!-- STAP 1: DATUM INSTELLING -->
            <Border Style="{StaticResource Card}" Padding="20">
                <StackLayout Spacing="16">
                    <!-- Step Header -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0" 
                                BackgroundColor="{StaticResource Primary}"
                                StrokeShape="RoundRectangle 14"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="1" Style="{StaticResource StepNumber}"/>
                        </Border>

                        <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                            <Label Text="Factuurdatum instellen" Style="{StaticResource StepTitle}"/>
                            <Label Text="Kies hoe de factuurdatum wordt bepaald" Style="{StaticResource StepDescription}"/>
                        </StackLayout>
                    </Grid>

                    <!-- Datum Setting -->
                    <Border BackgroundColor="{StaticResource Gray50}" 
                            StrokeShape="RoundRectangle 6" 
                            Padding="16">
                        <StackLayout Spacing="12">
                            <!-- Toggle -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Switch Grid.Column="0"
                                        IsToggled="{Binding GebruikAutomatischeDatum}"
                                        ThumbColor="White"
                                        OnColor="{StaticResource Success}"
                                        VerticalOptions="Center"/>

                                <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="Automatische datum (aanbevolen)"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}"/>
                                    <Label Text="Gebruik altijd de 1e van de huidige maand"
                                           Style="{StaticResource InfoText}"/>
                                </StackLayout>
                            </Grid>

                            <!-- Manual Date Picker -->
                            <StackLayout Spacing="8" 
                                         IsVisible="{Binding GebruikAutomatischeDatum, Converter={x:Static converters:InvertedBoolConverter.Instance}}">
                                <Label Text="â†’ Kies een aangepaste datum:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Warning}"/>

                                <DatePicker Date="{Binding HandmaligeDatum}"
                                            Format="dddd dd MMMM yyyy"
                                            BackgroundColor="White"
                                            TextColor="{StaticResource Gray900}"/>
                            </StackLayout>

                            <!-- Current Date Display -->
                            <Border BackgroundColor="White"
                                    StrokeThickness="1"
                                    Stroke="{StaticResource Success}"
                                    StrokeShape="RoundRectangle 6"
                                    Padding="12">
                                <StackLayout Spacing="2">
                                    <Label Text="âœ“ Factuurdatum wordt:"
                                           FontSize="12"
                                           TextColor="{StaticResource Success}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Factuurdatum, StringFormat='{0:dddd dd MMMM yyyy}'}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}"/>
                                </StackLayout>
                            </Border>
                        </StackLayout>
                    </Border>
                </StackLayout>
            </Border>

            <!-- STAP 2: EXCEL LADEN -->
            <Border Style="{StaticResource ActionCard}" Padding="20">
                <StackLayout Spacing="16">
                    <!-- Step Header -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0" 
                                BackgroundColor="{StaticResource Primary}"
                                StrokeShape="RoundRectangle 14"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="2" Style="{StaticResource StepNumber}"/>
                        </Border>

                        <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                            <Label Text="Excel bestand selecteren" Style="{StaticResource StepTitle}"/>
                            <Label Text="Laad het bestand met klantgegevens en uren" Style="{StaticResource StepDescription}"/>
                        </StackLayout>
                    </Grid>

                    <Button Text="ðŸ“ Kies Excel bestand"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding LaadExcelBestandCommand}"
                            IsEnabled="{Binding IsFacturenAanHetGenereren, Converter={x:Static converters:InvertedBoolConverter.Instance}}"/>
                </StackLayout>
            </Border>

            <!-- STAP 3: MAAND SELECTEREN -->
            <Border Style="{StaticResource ActionCard}" 
                    Padding="20"
                    IsVisible="{Binding IsExcelGeladen}">
                <StackLayout Spacing="16">
                    <!-- Step Header -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0" 
                                BackgroundColor="{StaticResource Primary}"
                                StrokeShape="RoundRectangle 14"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="3" Style="{StaticResource StepNumber}"/>
                        </Border>

                        <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                            <Label Text="Maand selecteren" Style="{StaticResource StepTitle}"/>
                            <Label Text="Voor welke maand wilt u facturen maken?" Style="{StaticResource StepDescription}"/>
                        </StackLayout>
                    </Grid>

                    <!-- Month Grid -->
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*" RowSpacing="8" ColumnSpacing="8">
                        <!-- Q1 -->
                        <Button Grid.Row="0" Grid.Column="0" Text="Januari" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Januari"/>
                        <Button Grid.Row="0" Grid.Column="1" Text="Februari" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Februari"/>
                        <Button Grid.Row="0" Grid.Column="2" Text="Maart" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Maart"/>

                        <!-- Q2 -->
                        <Button Grid.Row="1" Grid.Column="0" Text="April" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="April"/>
                        <Button Grid.Row="1" Grid.Column="1" Text="Mei" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Mei"/>
                        <Button Grid.Row="1" Grid.Column="2" Text="Juni" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Juni"/>

                        <!-- Q3 -->
                        <Button Grid.Row="2" Grid.Column="0" Text="Juli" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Juli"/>
                        <Button Grid.Row="2" Grid.Column="1" Text="Augustus" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Augustus"/>
                        <Button Grid.Row="2" Grid.Column="2" Text="September" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="September"/>

                        <!-- Q4 -->
                        <Button Grid.Row="3" Grid.Column="0" Text="Oktober" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="Oktober"/>
                        <Button Grid.Row="3" Grid.Column="1" Text="November" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="November"/>
                        <Button Grid.Row="3" Grid.Column="2" Text="December" Style="{StaticResource SecondaryButton}" Command="{Binding SelecteerMaandDirectCommand}" CommandParameter="December"/>
                    </Grid>

                    <!-- Selection Summary -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="{StaticResource Success}"
                            StrokeShape="RoundRectangle 6"
                            Padding="12"
                            IsVisible="{Binding GeselecteerdeMaand, Converter={x:Static converters:IsNotNullConverter.Instance}}">
                        <StackLayout Spacing="4">
                            <Label Text="âœ“ Selectie bevestigd"
                                   FontSize="12"
                                   TextColor="{StaticResource Success}"
                                   FontAttributes="Bold"/>
                            <StackLayout Orientation="Horizontal" Spacing="4">
                                <Label Text="Facturen voor maand:" Style="{StaticResource InfoText}"/>
                                <Label Text="{Binding GeselecteerdeMaand}" 
                                       FontSize="13" 
                                       FontAttributes="Bold" 
                                       TextColor="{StaticResource Gray900}"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="4">
                                <Label Text="Factuurdatum wordt:" Style="{StaticResource InfoText}"/>
                                <Label Text="{Binding Factuurdatum, StringFormat='{0:dd MMMM yyyy}'}" 
                                       FontSize="13" 
                                       FontAttributes="Bold" 
                                       TextColor="{StaticResource Success}"/>
                            </StackLayout>
                        </StackLayout>
                    </Border>
                </StackLayout>
            </Border>

            <!-- Factuurnummer Configuratie -->
            <Frame BackgroundColor="LightBlue" Padding="12" Margin="10,5" CornerRadius="8">
                <StackLayout>
                    <Label Text="ðŸ”¢ Factuurnummer Instelling" FontAttributes="Bold" FontSize="16" />

                    <!-- Toggle Switch -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                        <Label Grid.Column="0" 
                   Text="Handmatig factuurnummer opgeven" 
                   VerticalOptions="Center" />
                        <Switch Grid.Column="1" 
                    IsToggled="{Binding IsHandmatigFactuurnummer}" 
                    ThumbColor="White"
                    OnColor="DodgerBlue" />
                    </Grid>

                    <!-- Handmatig Nummer Input -->
                    <StackLayout IsVisible="{Binding IsHandmatigFactuurnummer}" Margin="0,8,0,0">
                        <Label Text="Factuurnummer:" FontSize="14" />
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Grid.Column="0"
                       Text="{Binding HandmatigFactuurnummer}"
                       Placeholder="Bijv. 140"
                       Keyboard="Numeric"
                       BackgroundColor="White" />
                            <Button Grid.Column="1"
                        Text="ðŸ“‹"
                        Command="{Binding ToonBestaandeNummersCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"
                        WidthRequest="40"
                        Margin="5,0,0,0" />
                        </Grid>

                        <!-- Status Info -->
                        <Label Text="{Binding FactuurNummerInfo}" 
                   FontSize="12" 
                   Margin="0,4,0,0">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" 
                                Binding="{Binding IsFactuurNummerBeschikbaar}" 
                                Value="True">
                                    <Setter Property="TextColor" Value="Green" />
                                </DataTrigger>
                                <DataTrigger TargetType="Label" 
                                Binding="{Binding IsFactuurNummerBeschikbaar}" 
                                Value="False">
                                    <Setter Property="TextColor" Value="Orange" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </StackLayout>

                    <!-- Auto Nummer Info -->
                    <Label IsVisible="{Binding IsHandmatigFactuurnummer, Converter={x:Static converters:InvertedBoolConverter.Instance}}"
               Text="ðŸ”„ Automatische nummering: volgend beschikbaar nummer wordt gebruikt"
               FontSize="12"
               TextColor="Gray"
               Margin="0,8,0,0" />
                </StackLayout>
            </Frame>

            <!-- STAP 4: KLANTEN SELECTEREN -->
            <Border Style="{StaticResource ActionCard}" 
                    Padding="20"
                    IsVisible="{Binding GeselecteerdeMaand, Converter={x:Static converters:IsNotNullConverter.Instance}}">
                <StackLayout Spacing="16">
                    <!-- Step Header -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0" 
                                BackgroundColor="{StaticResource Primary}"
                                StrokeShape="RoundRectangle 14"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="4" Style="{StaticResource StepNumber}"/>
                        </Border>

                        <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                            <Label Text="Klanten selecteren" Style="{StaticResource StepTitle}"/>
                            <Label Text="Voor welke klanten wilt u facturen maken?" Style="{StaticResource StepDescription}"/>
                        </StackLayout>
                    </Grid>

                    <!-- Quick Actions -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="âœ“ Alles selecteren"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding SelecteerAlleKlantenCommand}"
                                IsEnabled="{Binding IsFacturenAanHetGenereren, Converter={x:Static converters:InvertedBoolConverter.Instance}}"/>

                        <Button Grid.Column="1"
                                Text="âœ— Alles deselecteren"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding DeselecteerAlleKlantenCommand}"
                                IsEnabled="{Binding IsFacturenAanHetGenereren, Converter={x:Static converters:InvertedBoolConverter.Instance}}"/>
                    </Grid>

                    <!-- Klanten List -->
                    <Border BackgroundColor="{StaticResource Gray50}"
                            StrokeShape="RoundRectangle 6"
                            Padding="8">
                        <CollectionView ItemsSource="{Binding Klanten}" 
                                        MaximumHeightRequest="300"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:KlantItem">
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="{StaticResource Gray300}"
                                            StrokeShape="RoundRectangle 6"
                                            Padding="12"
                                            Margin="4">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsGeselecteerd}"
                                                      Color="{StaticResource Primary}"
                                                      VerticalOptions="Center"/>

                                            <Label Grid.Column="1"
                                                   Text="{Binding Naam}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Gray900}"
                                                   Margin="12,0,0,0"
                                                   VerticalOptions="Center"/>

                                            <Label Grid.Column="2"
                                                   Text="{Binding BedragFormatted}"
                                                   FontSize="13"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Gray700}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Border>
                </StackLayout>
            </Border>

            <!-- STAP 5: FACTUREN GENEREREN -->
            <Border Style="{StaticResource ActionCard}" 
                    Padding="20"
                    IsVisible="{Binding GeselecteerdeMaand, Converter={x:Static converters:IsNotNullConverter.Instance}}">
                <StackLayout Spacing="16">
                    <!-- Step Header -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0" 
                                BackgroundColor="{StaticResource Success}"
                                StrokeShape="RoundRectangle 14"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="5" 
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"/>
                        </Border>

                        <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                            <Label Text="Facturen genereren" Style="{StaticResource StepTitle}"/>
                            <Label Text="Start het facturatieproces" Style="{StaticResource StepDescription}"/>
                        </StackLayout>
                    </Grid>

                    <Button Text="ðŸš€ Genereer facturen"
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding GenereerFacturenCommand}"
                            IsEnabled="{Binding IsFacturenAanHetGenereren, Converter={x:Static converters:InvertedBoolConverter.Instance}}"/>
                </StackLayout>
            </Border>

            <!-- PROGRESS -->
            <Border Style="{StaticResource Card}" 
                    Padding="20"
                    IsVisible="{Binding IsFacturenAanHetGenereren}">
                <StackLayout Spacing="12">
                    <Label Text="Facturen worden gegenereerd..."
                           Style="{StaticResource StepTitle}"/>

                    <Label Text="{Binding FactuurProgressTekst}" 
                           Style="{StaticResource StepDescription}"/>

                    <Border BackgroundColor="{StaticResource Gray100}"
                            StrokeShape="RoundRectangle 4"
                            Padding="2">
                        <ProgressBar Progress="{Binding FactuurProgress, Converter={x:Static converters:PercentageToProgressConverter.Instance}}"
                                     ProgressColor="{StaticResource Primary}"
                                     BackgroundColor="Transparent"
                                     HeightRequest="8"/>
                    </Border>

                    <Label Text="{Binding FactuurProgress, StringFormat='{0:F0}% voltooid'}" 
                           Style="{StaticResource InfoText}"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Border>

            <!-- EXTRA FUNCTIES -->
            <Border Style="{StaticResource Card}" Padding="20">
                <StackLayout Spacing="16">
                    <Label Text="Extra functies" Style="{StaticResource StepTitle}"/>

                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <Button Grid.Column="0"
                                Text="âš™ï¸ Instellingen"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding OpenInstellingenCommand}"
                                IsEnabled="{Binding IsFacturenAanHetGenereren, Converter={x:Static converters:InvertedBoolConverter.Instance}}"/>

                        <Button Grid.Column="1"
                                Text="ðŸ§ª Test Maanden"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding TestMaandenCommand}"/>

                        <Button Grid.Column="2"
                                Text="ðŸ’³ Test Mollie"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding TestMollieApiCommand}"/>
                    </Grid>
                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>